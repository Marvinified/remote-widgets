        "@types/webpack-merge": "^5.0.0",
        "concurrently": "^8.2.2",
        "eslint": "9.x",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.6.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.3.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "typescript-eslint": "^7.13.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
