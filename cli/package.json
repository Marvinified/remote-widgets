        "babel": "^6.23.0",
        "babel-loader": "^9.2.1",
        "glob": "^11.0.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "ts-loader": "^9.5.2",
        "webpack": "^5.97.1",
        "webpack-merge": "^6.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.26.4",
        "@types/glob": "^8.1.0",
        "@types/node": "^20.10.3",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
